<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.SitehomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sitehome_imv"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="@dimen/image_margin"
            android:src="@drawable/usth" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_margin"
            android:background="#d3d3d3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/image_wh"
                    android:layout_height="@dimen/image_wh"
                    android:layout_marginStart="@dimen/image_margin_2"
                    android:src="@drawable/folder" />

                <TextView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/image_margin"
                    android:layout_marginRight="@dimen/image_margin"
                    android:gravity="center_vertical"
                    android:text="@string/course_categories"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="@dimen/image_wh_very_small"
                    android:layout_height="@dimen/image_wh_very_small"
                    android:layout_marginLeft="@dimen/image_margin_2"
                    android:layout_gravity="center"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/linear_layout_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/image_wh"
                    android:layout_height="@dimen/image_wh"
                    android:layout_marginStart="@dimen/image_margin_2"
                    android:src="@drawable/cap" />

                <TextView
                    android:layout_width="@dimen/text_width"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/image_margin"
                    android:layout_marginRight="@dimen/image_margin"
                    android:gravity="center_vertical"
                    android:text="@string/course_my_courses"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:layout_width="@dimen/image_wh_very_small"
                    android:layout_height="@dimen/image_wh_very_small"
                    android:layout_marginLeft="@dimen/image_margin_2"
                    android:layout_gravity="center"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_margin"
            android:background="#d3d3d3" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="255dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sitehome_rv"
                android:layout_width="@dimen/text_width_2"
                android:layout_height="match_parent" >
            </android.support.v7.widget.RecyclerView>

    </ScrollView>
</FrameLayout>